---
const { subtitle, paragraph } = Astro.props;
import Starh2 from "../components/Starh2.astro";
import CTA1 from "../components/Cta1.astro";
---

<section>
  <img src="src/assets/beltsection-img.webp" />
  <div>
    <Starh2 title="Program" />

    <h3>{subtitle}</h3>
    <slot />
    <div class="flex2">
      <h4>{paragraph}</h4>
      <CTA1 text="Se program" />
    </div>
  </div>
</section>

<style>
  section {
    background-color: var(--DarkTurquoise);
  }

  section > div {
    padding-left: 3vw;
    padding-right: 4vw;
  }
  img {
    border-bottom-right-radius: 900px 300px;
    width: 100vw;
    height: 200px;
  }

  h3 {
    margin-top: -30px;
  }

  .flex2 {
    display: flex;
    align-items: center;
    gap: 40px;
    margin-top: -20px;
  }
  section > div {
    margin-top: -40px;
  }

  @media (min-width: 700px) {
    section {
      display: grid;
      grid-template-columns: 1fr 2fr;
    }

    img {
      border-top-right-radius: 400px;
      border-bottom-right-radius: 0px 0px;
      width: 100%;
      height: 100%;
    }

    section > div {
      margin-top: 20px;
    }

    h3 {
      margin-top: 20px;
      margin-bottom: 30px;
    }

    .flex2 {
      margin-top: 40px;
    }
  }
</style>
