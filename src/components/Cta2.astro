---
const { text, url } = Astro.props;
import "../css/base.css";
---

<a href={url}>
  <button>
    <div class="cta2">
      {text}
    </div>
  </button>
</a>

<style>
  a {
    text-decoration: none;
  }
  button {
    background-color: var(--DarkerTurquoise);
    border: 0.5px solid var(--LightestTurquoise);
    border-radius: 5px;
    padding: 8px;
    box-shadow: 1px 2px 6px black;
    width: 150px;
  }

  button:hover {
    border: 0.5px solid var(--Purple);
  }

  button:hover .cta2 {
    color: var(--Purple);
  }
</style>
