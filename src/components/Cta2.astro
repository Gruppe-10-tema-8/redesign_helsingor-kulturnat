---
const { text } = Astro.props;
import "../css/base.css";
---

<button>
  <div class="cta2">
    {text}
  </div>
</button>

<style>
  button {
    background-color: var(--DarkerTurquoise);
    border: 0.5px solid var(--LightestTurquoise);
    border-radius: 5px;
    padding: 8px;
    box-shadow: 1px 2px 6px black;
    width: 150px;
  }
</style>
