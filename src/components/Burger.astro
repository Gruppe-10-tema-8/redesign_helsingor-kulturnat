<style>
  header {
    position: fixed;
    width: 100vw;
    height: 100vh;
    margin: 0;
    padding: 0;
    top: 0;
  }
  #burgercontent {
    position: absolute;
    width: 100%;
    min-height: 100vh;
    backdrop-filter: blur(0px);
    transition: 0.5s ease-in;
    overflow-y: auto;
    pointer-events: none;
  }

  #burgercontent.active {
    backdrop-filter: blur(8px);
    pointer-events: all;
  }

  #burgercontent > nav {
    width: 100%;
    min-height: 100vh;
    background-color: color-mix(in srgb, var(--DarkTurquoise), transparent 20%);
    /* mask-image: url(../assets/star/light/large.svg); */
    mask-size: 12vw;
    mask-repeat: no-repeat;
    mask-position: 85vw 3.6vw;
    transition: 0.5s ease-in;
    opacity: 0%;

    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  #burgercontent > nav a,
  #burgercontent > nav div {
    align-self: center;
    text-decoration: none;
  }

  #burgercontent > nav .dropdown > div {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
  }
  #burgercontent > nav .dropdown {
  }

  #burgercontent > nav a p,
  #burgercontent .dropdown nav.dropdowncontent > a {
    font-style: normal;
    text-decoration: none;
    font-size: 150%;
  }

  .dropdown > div .arrow {
    aspect-ratio: 1/1;
    height: 2rem;
    align-self: center;
    mask-image: url(../assets/arrows/dropdownarrow.svg);
    mask-size: 50%;
    mask-position: center;
    mask-repeat: no-repeat;
    background-color: var(--LightTurquoise);
    transition: 0.1s ease-in-out;
  }

  .dropdown.active > div .arrow {
    transform: rotate(90deg);
  }

  .dropdown nav.dropdowncontent {
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow-y: hidden;
    max-height: 0px;
    transition: 0.3s ease-in-out;
  }

  .dropdown.active nav.dropdowncontent{
    max-height: 1000px;
  }

  .dropdown nav.dropdowncontent > a {
    font-size: 110% !important;
    color: var(--LightTurquoise);
    font-style: normal;
    text-decoration: none;
    transition: 0.25s ease-in-out;
    transform: translateY(-40vh);
  }

  .dropdown.active nav.dropdowncontent > a{
    transform: translateY(0%);


  }

  a.logo {
    align-self: normal !important;
    mask-image: url(../assets/Logo.svg);
    mask-size: contain;
    mask-repeat: no-repeat;
    mask-position: center;
    background-color: var(--Green);
    width: 50vw;
    aspect-ratio: 16 / 9;
  }

  #burgercontent.active > nav {
    mask-size: 600vh;
    mask-position: -320vw -300vw;
    opacity: 100%;
  }

  button#burger {
    top: 0;
    right: 0;
    position: relative;

    margin: 0;

    padding: 0;
    width: 0;
    border-radius: 0;
    background-color: transparent;
    border-style: none;
    width: 9vw;
    aspect-ratio: 1 / 1;
    float: right; /* har hørt at float er dårligt men øøøh fuck it */
    transform: translate(-50%, 50%);
  }
  button#burger > div {
    position: absolute;
    width: 100%;
    height: 2px;
    background-color: var(--Green);
    transition: 0.33s ease-in-out;
  }
  button#burger > div:nth-child(1) {
    top: 15%;
  }

  button#burger > div:nth-child(2) {
    top: 50%;
  }

  button#burger > div:nth-child(3) {
    top: 85%;
  }

  button#burger.active > div:nth-child(1) {
    top: 50%;
    transform: rotate(-45deg);
  }

  button#burger.active > div:nth-child(2) {
    opacity: 0;
  }

  button#burger.active > div:nth-child(3) {
    top: 50%;
    transform: rotate(45deg);
  }
  header {
    position: fixed;
  }
</style>

<script>
  // const main = document.querySelector("main");
  // const footer = document.querySelector("footer");
  const burger = document.querySelector("button#burger");
  const burgercont = document.querySelector("#burgercontent");
  const burgerdropdowns = burgercont.querySelectorAll(".dropdown");
  burger.addEventListener(`click`, burgerToggle);

  function burgerToggle() {
    console.log("Burger clicked");
    burger.classList.toggle("active");
    burgercont.classList.toggle("active");
    // main.classList.toggle("burgeractive");
    // footer.classList.toggle("burgeractive");
  }

  burgerdropdowns.forEach((burgerdropdown) => {
    const dropdownarrow = burgerdropdown.querySelector(".arrow");
    dropdownarrow.addEventListener("click", () => {
      burgerdropdown.classList.toggle("active");
    });
  });
</script>
