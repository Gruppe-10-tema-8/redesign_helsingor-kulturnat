---
const { text, url } = Astro.props;
import "../css/base.css";
---

<a href={url}>
  <button>
    <div class="cta1">{text}</div>
  </button>
</a>

<style>
  a {
    text-decoration: none;
  }
  button {
    background-color: var(--Purple);
    border: 0.5px solid var(--LightPurple);
    border-radius: 5px;
    padding: 6px;
    box-shadow: 1px 2px 6px black;
    width: 125px;
  }

  button:hover {
    background-color: var(--LightestTurquoise);
    border: 0.5px solid var(--Purple);
  }

  button:hover .cta1 {
    color: var(--Purple);
  }
</style>
