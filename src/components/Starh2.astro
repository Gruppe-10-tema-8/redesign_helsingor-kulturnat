---
const { title } = Astro.props;
---

<div>
  <img src="../src/assets/star/green/medium.svg" alt="" />
  <h2>{title}</h2>
</div>

<style>
  div {
    display: flex;
    align-items: baseline;
    margin-left: 1vw;
    gap: 20px;
  }

  img {
    width: 35px;
    margin-right: -6vw;
  }
  @media (min-width: 700px) {
    img {
      width: 45px;
      margin-right: -4vw;
    }
  }
</style>
