<style>
  header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 15vh;
    overflow-y: visible;
    background-image: linear-gradient(
      180deg,
      var(--DarkestTurquoise) 65%,
      transparent 100%
    );
  }
  header > nav,
  header a {
    width: 100%;
    margin-bottom: 5vh;
  }
  header.desktopheader > a.logo {
    width: 100%;
    height: 100%;
    mask-image: url(../assets/Logo.svg);
    mask-size: contain;
    mask-repeat: no-repeat;
    mask-position: center;
    background-color: var(--Green);
    margin: 0;
    transform: scale(85%);
  }

  header > nav {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
  }

  .subheader > a {
    font-style: normal;
    text-decoration: none;
    font-weight: 500;
  }
  .deskdropdown {
    position: relative;
  }
  .deskdropdown nav.deskdropcont {
    width: 100%;
    position: absolute;
    transition: 0.25s ease-in-out;
    display: flex;
    gap: 0;
    flex-direction: column;
    overflow: hidden;
    transform: translateY(-100%);
    background-color: var(--DarkestTurquoise);
    opacity: 0%;
    z-index: -1;
    border-radius: 10px;


  }

  .deskdropdown:hover nav.deskdropcont {
    transform: translateY(0);
    opacity: 100%;

  }

  .deskdropdown nav.deskdropcont > a {
    text-align: center;
    margin-left: 0;
    margin-right: 0;
    padding:0;

    font-style: normal;
    text-decoration: none;
    transition: 0.25s ease-in-out;
  }

  .deskdropdown:hover nav.deskdropcont > a {
  }
</style>
